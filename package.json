{
  "name": "riot-meiosis",
  "version": "1.1.8",
  "description": "Meiosis state manager for Riot using Erre",
  "main": "dist/umd.js",
  "module": "dist/cjs.js",
  "jsnext:main": "dist/es.js",
  "files": [
    "dist/umd.js",
    "dist/cjs.js",
    "dist/es.js",
    "readme.md",
    "screenshots"
  ],
  "scripts": {
    "start": "make watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:damusix/riot-meiosis.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "riot",
    "meiosis",
    "state-manager",
    "erre",
    "stream",
    "state",
    "riot4"
  ],
  "author": "Danilo Alonso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damusix/riot-meiosis/issues"
  },
  "homepage": "https://github.com/damusix/riot-meiosis#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.13",
    "@commitlint/cli": "^11",
    "@commitlint/config-conventional": "^11",
    "@riotjs/cli": "^5",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "chai": "^4",
    "cz-conventional-changelog": "^3",
    "deep-diff": "^1.0.2",
    "erre": "^2.2.0",
    "husky": "^4",
    "lodash.clonedeep": "^4.5.0",
    "mocha": "^6.1.4",
    "rollup": "^2.38.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [0, "always"]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "ci": false,
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
